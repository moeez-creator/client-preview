    <script>
        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Navigation scroll effect
        window.addEventListener('scroll', function() {
            const nav = document.querySelector('nav');
            if (window.scrollY > 50) {
                nav.classList.add('scrolled');
            } else {
                nav.classList.remove('scrolled');
            }
        });

        // Language toggle
        document.querySelector('.language-toggle').addEventListener('click', function() {
            const isRTL = document.dir === 'rtl';
            document.dir = isRTL ? 'ltr' : 'rtl';
            this.textContent = isRTL ? 'العربية' : 'English';
        });

        // Mobile menu toggle
        document.querySelector('.mobile-menu-toggle').addEventListener('click', function() {
            const navLinks = document.querySelector('.nav-links');
            navLinks.classList.toggle('active');
            const icon = this.querySelector('i');
            icon.classList.toggle('fa-bars');
            icon.classList.toggle('fa-times');
        });

        // Form submission
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const button = this.querySelector('.form-submit');
            const originalText = button.textContent;
            button.innerHTML = '<span class="loading-spinner"></span> Sending...';
            button.disabled = true;
            
            // Simulate form submission
            setTimeout(() => {
                button.textContent = 'Message Sent!';
                button.style.background = '#10B981';
                setTimeout(() => {
                    button.textContent = originalText;
                    button.disabled = false;
                    button.style.background = '';
                    this.reset();
                }, 2000);
            }, 1500);
        });

        // Newsletter form
        document.querySelector('.newsletter-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const button = this.querySelector('.newsletter-button');
            const input = this.querySelector('.newsletter-input');
            const originalText = button.textContent;
            
            button.innerHTML = '<span class="loading-spinner"></span>';
            button.disabled = true;
            
            setTimeout(() => {
                button.textContent = 'Subscribed!';
                setTimeout(() => {
                    button.textContent = originalText;
                    button.disabled = false;
                    input.value = '';
                }, 2000);
            }, 1000);
        });

        // Generate AI visualization nodes
        function generateAINodes() {
            const aiViz = document.querySelector('.ai-visualization');
            if (aiViz) {
                // Add more dynamic nodes
                for (let i = 0; i < 20; i++) {
                    const node = document.createElement('div');
                    node.className = 'ai-node';
                    node.style.top = Math.random() * 100 + '%';
                    node.style.left = Math.random() * 100 + '%';
                    node.style.animationDelay = Math.random() * 3 + 's';
                    node.style.animationDuration = (3 + Math.random() * 2) + 's';
                    aiViz.appendChild(node);
                }
                
                // Add more connections
                for (let i = 0; i < 10; i++) {
                    const connection = document.createElement('div');
                    connection.className = 'ai-connection';
                    connection.style.top = Math.random() * 100 + '%';
                    connection.style.width = (30 + Math.random() * 40) + '%';
                    connection.style.left = Math.random() * 60 + '%';
                    connection.style.animationDelay = Math.random() * 3 + 's';
                    connection.style.animationDuration = (3 + Math.random() * 2) + 's';
                    aiViz.appendChild(connection);
                }
            }
        }
        
        generateAINodes();
        
        // Enhanced parallax effects
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            
            // Hero parallax
            const heroImage = document.querySelector('.hero-image');
            if (heroImage && scrolled < 800) {
                heroImage.style.transform = `translateY(${scrolled * 0.5}px)`;
            }
            
            // AI visualization parallax
            const aiNodes = document.querySelectorAll('.ai-node');
            aiNodes.forEach((node, index) => {
                if (scrolled > 1500 && scrolled < 3000) {
                    const speed = 0.5 + (index % 3) * 0.2;
                    node.style.transform = `translateY(${(scrolled - 1500) * speed * 0.1}px)`;
                }
            });
        });
        
        // Add hover effect to market cards
        document.querySelectorAll('.market-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px) scale(1.02)';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Add active state to navigation
        const sections = document.querySelectorAll('section[id]');
        const navLinks = document.querySelectorAll('.nav-links a[href^="#"]');

        function updateActiveLink() {
            const scrollY = window.pageYOffset;
            
            sections.forEach(section => {
                const sectionTop = section.offsetTop - 100;
                const sectionHeight = section.offsetHeight;
                const sectionId = section.getAttribute('id');
                
                if (scrollY >= sectionTop && scrollY < sectionTop + sectionHeight) {
                    navLinks.forEach(link => {
                        link.classList.remove('active');
                        if (link.getAttribute('href') === `#${sectionId}`) {
                            link.classList.add('active');
                        }
                    });
                }
            });
        }

        window.addEventListener('scroll', updateActiveLink);
        updateActiveLink();

        // Number counter animation
        function animateNumbers() {
            const numbers = document.querySelectorAll('.stat-number, .impact-value');
            
            numbers.forEach(number => {
                const target = number.textContent;
                const isPercentage = target.includes('%');
                const isDollar = target.includes('

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Apply animations
        document.querySelectorAll('.casa-card, .service-card, .market-card, .impact-metric').forEach(element => {
            element.style.opacity = '0';
            element.style.transform = 'translateY(20px)';
            element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(element);
        });
    </script>
