                <div class=" + display;
                        if (isPercentage) display = display + '%';
                        if (hasPlus) display = display + '+';
                        if (target.includes('B')) display = display + 'B';
                        if (target.includes('M')) display = display + 'M';
                        if (target.includes('K')) display = display + 'K';
                        
                        number.textContent = display;
                    }, 30);
